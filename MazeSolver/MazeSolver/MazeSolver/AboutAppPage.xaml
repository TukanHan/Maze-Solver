<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MazeSolver.AboutAppPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="O Aplikacji"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout Spacing="10" Margin="20">

            <Label Font="25" Text="Maze Solver v1.0."  />
            <Label Font="16" Text="Aplikacja wczytuje schemat labiryntu ze zdjęcia bądź kamery, a następnie znajduje wyjście z punktu A do punktu B." />
            <Label Font="16" Text="Program o otwartym kodzie źródłowym, stworzony w języku C# i technologii Xamarin."/>
            <StackLayout Orientation="Horizontal">
                <Label Font="16" Text="Dostępny pod: "/>
                <Label Font="16" Text="github.com/TukanHan" TextColor="RoyalBlue" x:Name="linkLabel"/>
            </StackLayout>
            <Label Font="16" Text="TukanHan"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>