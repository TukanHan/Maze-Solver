<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MazeSolver.InstructionPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Instrukcje"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout Spacing="10" Margin="20">
            <Label Font="25" Text="Maze Solver v1.0."/>
            <Label Font="16" Text="Aplikacja wczytuje schemat labiryntu ze zdjęcia bądź kamery." />
            <Label Font="16" Text="Aplikacja rozpoznaje prostokątne labirynty o 2 punktach wejściowych." />
            <Label Font="16" Text="Upewnij się że ścianki labiryntu są odpowiednio grube." />
            <Label Font="16" Text="Upewnij się że zdjęcie ma równomierne oświetlenie." />
            <Label Font="16" Text="Upewnij się że labirynt znajduje się w centrum zdjęcia." />
            <Label Font="16" Text="Upewnij się że zdjęcie jest zrobione pod odpowiednim kątem." />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>